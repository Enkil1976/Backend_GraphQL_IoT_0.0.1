{
  "name": "backend-graphql-iot",
  "version": "1.0.0",
  "description": "GraphQL Backend for IoT Greenhouse System",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest src/tests/integration.test.js",
    "test:unit": "jest --testPathIgnorePatterns=integration.test.js",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "schema:download": "apollo service:download --endpoint=http://localhost:4001/graphql schema.json",
    "db:init": "node init-database.js",
    "db:admin": "node src/cli/dbAdmin.js",
    "db:status": "node -e \"require('./src/services/databaseInitService').getStatus().then(s => console.log(JSON.stringify(s, null, 2)))\"",
    "security:scan": "node -e \"require('./src/services/vulnerabilityScanner').performFullScan()\""
  },
  "keywords": [
    "graphql",
    "iot",
    "apollo",
    "greenhouse",
    "sensors"
  ],
  "author": "IoT Greenhouse Team",
  "license": "MIT",
  "dependencies": {
    "apollo-server-express": "^3.12.0",
    "argon2": "^0.43.0",
    "axios": "^1.6.0",
    "bcrypt": "^5.1.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dataloader": "^2.2.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "graphql": "^16.6.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-query-complexity": "^0.12.0",
    "graphql-redis-subscriptions": "^2.5.0",
    "graphql-scalars": "^1.20.1",
    "graphql-subscriptions": "^2.0.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.2.4",
    "joi": "^17.7.0",
    "jsonwebtoken": "^9.0.2",
    "moment-timezone": "^0.5.45",
    "mqtt": "^5.10.1",
    "pg": "^8.12.0",
    "qrcode": "^1.5.4",
    "rate-limiter-flexible": "^5.0.3",
    "speakeasy": "^2.0.0",
    "graphql-ws": "^5.14.0",
    "winston": "^3.15.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.0",
    "@babel/preset-env": "^7.25.0",
    "@types/node": "^20.14.0",
    "eslint": "^9.0.0",
    "graphql-request": "^6.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.0.0",
    "supertest": "^7.0.0",
    "ws": "^8.18.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
