{
  "name": "backend-graphql-iot",
  "version": "1.0.0",
  "description": "GraphQL Backend for IoT Greenhouse System",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest src/tests/integration.test.js",
    "test:unit": "jest --testPathIgnorePatterns=integration.test.js",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "schema:download": "apollo service:download --endpoint=http://localhost:4001/graphql schema.json"
  },
  "keywords": [
    "graphql",
    "iot",
    "apollo",
    "greenhouse",
    "sensors"
  ],
  "author": "IoT Greenhouse Team",
  "license": "MIT",
  "dependencies": {
    "apollo-datasource": "^3.3.2",
    "apollo-server-express": "^3.12.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dataloader": "^2.2.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "graphql": "^16.6.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-query-complexity": "^0.12.0",
    "graphql-redis-subscriptions": "^2.5.0",
    "graphql-scalars": "^1.20.1",
    "graphql-subscriptions": "^2.0.0",
    "helmet": "^6.0.1",
    "ioredis": "^5.2.4",
    "joi": "^17.7.0",
    "jsonwebtoken": "^9.0.0",
    "moment-timezone": "^0.5.40",
    "mqtt": "^4.3.7",
    "pg": "^8.8.0",
    "rate-limiter-flexible": "^2.4.1",
    "subscriptions-transport-ws": "^0.11.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@types/node": "^18.11.18",
    "eslint": "^8.30.0",
    "graphql-request": "^6.1.0",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "supertest": "^6.3.3",
    "ws": "^8.18.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
